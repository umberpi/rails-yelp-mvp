<div class="container">
  <h1>Yep Restaurants! </h1>
  <ul>
    <% @restaurants.each  do |rest| %>
      <li> <strong> <%= link_to rest.name, restaurant_path(rest) %> </strong> in <em><%= rest.address %></em> makes <strong><%=rest.category %></strong> cuisine!! You can call at <%= rest.phone_number  %>
        <%= link_to "Add your review", new_restaurant_review_path(rest), class: "btn btn-warning button-review" %>
      </li>
    <% end %>
  </ul>
    <%= link_to "Add a Restaurant", new_restaurant_path, class: "btn btn-primary button-review" %>
</div>
